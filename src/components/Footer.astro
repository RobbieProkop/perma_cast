---
import "../styles/footer.scss";
const today = new Date();

const insta = "/assets/icons/insta.png";
const fb = "/assets/icons/fb.png";
const linkedin = "/assets/icons/linkedin.png";
const logo = "/assets/logo.png";
---

<footer class="footer">
	<div class="container">
		<div class="left">
			<a href="tel:+14032759626" class="phone">(403) 275-9626</a>
			<div class="text-group">
				<h3>OFFICE</h3>
				<p>114 Panatella Circle NW,</p>
				<p>Calgary, AB, T3K5Z7</p>
			</div>
			<div class="text-group">
				<h3>SHOP</h3>
				<p>8 Fulton Gate</p>
				<p>Rocky View County, AB</p>
			</div>
		</div>
		<p class="copyright">
			&copy; {today.getFullYear()} Perma-Cast Concrete Construction LTD. All rights
			reserved.
		</p>
		<div class="right">
			<div class="logo">
				<a href="/"
					><img
						src={logo}
						alt="Perma Cast logo"
						loading="lazy"
						fetchpriority="high"
						decoding="async"
					/></a
				>
			</div>
		</div>
	</div>
</footer>

