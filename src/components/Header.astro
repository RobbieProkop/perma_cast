---
import "../styles/header.scss";
import HeaderLink from "./HeaderLink.astro";

const logo = "/assets/logo.png";
const insta = "/assets/icons/insta.png";
const fb = "/assets/icons/fb.png";
const linkedin = "/assets/icons/linkedin.png";
---

<header class="header">
	<div class="logo">
		<a href="/"
			><img
				src={logo}
				alt="Perma Cast logo"
				loading="eager"
				fetchpriority="high"
				decoding="async"
			/></a
		>
	</div>
	<nav class="nav">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/about">About Us</HeaderLink>
		<HeaderLink href="/services">Services</HeaderLink>
		<HeaderLink href="/projects">Projects</HeaderLink>
		<HeaderLink href="/safety">Safety</HeaderLink>
		<HeaderLink href="/careers">Careers</HeaderLink>
		<HeaderLink href="/contact">Contact</HeaderLink>
	</nav>

	<label for="hamberger-menu" class="hidden"></label>
	<input id="open-menu" class="toggler" type="checkbox" />
	<div id="hamberger" class="hamberger"><div></div></div>

	<div id="mobile-menu" class="menu">
		<nav>
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About Us</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/safety">Safety</HeaderLink>
			<HeaderLink href="/careers">Careers</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</nav>
	</div>
</header>

<script>
	const open = document.getElementById("open-menu") as HTMLInputElement;
	const hamberger = document.getElementById("hamberger") as HTMLElement;

	hamberger.addEventListener("click", () => {
		open.checked = !open.checked;
	});
</script>
