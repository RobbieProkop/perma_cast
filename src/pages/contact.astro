---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/Hero.astro";
import ContactForm from "../components/ContactForm.astro";

import "../styles/contact.scss";

const image = "/assets/contact.png";
---

<Layout title="Contact Us">
  <div class="contact-hero">
    <Hero title="Contact Us" image={image} overlayLight={true} />
  </div>
  <div class="column">
    <div class="container">
      <section class="text">
        <div class="text-group">
          <h3>OFFICE INFO</h3>
          <a href="tel:+14032759626">(403) 275-9626</a>
          <p>114 Panatella Circle NW</p>
          <p>Calgary, AB, T3K5Z7</p>
        </div>
        <div class="text-group">
          <h3>SHOP ADDRESS</h3>
          <p>114 Panatella Circle NW</p>
          <p>Calgary, AB, T3K5Z7</p>
        </div>
      </section>
      <ContactForm fileUpload={false} />
    </div>
  </div>
</Layout>
